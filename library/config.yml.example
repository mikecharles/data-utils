---

ptiles: [1, 2, 5, 10, 15, 20, 25, 33, 40, 50, 60, 67, 75, 80, 85, 90, 95, 98, 99]

fcst-data:
    gefsbc:
        num-members: 21
        fhr-int: 6
        r-best: 0.7
        grid-name: '1deg_global'
        data-type: 'grib2'
        file-template: '/path/to/model-data/raw/{model}/06h/{yyyy}/{mm}/{dd}/{cycle-num}/{model}_{yyyy}{mm}{dd}_{cycle}_f{fhr}_m{member}.grb2'
        vars:
            tmean:
                name: 'TMP'
                level: '2 m above ground'
    cmcebc:
        num-members: 21
        fhr-int: 6
        r-best: 0.7
        grid-name: '1deg_global'
        data-type: 'grib1'
        file-template: '/path/to/model-data/raw/{model}/06h/{yyyy}/{mm}/{dd}/{cycle-num}/{model}_{yyyy}{mm}{dd}_{cycle}_f{fhr}_m{member}.grb'
        vars:
            tmean:
                name: 'TMP'
                level: '2 m above gnd'

climo-data:

    file-template: '/path/to/climatologies/{climo-var}/{grid-name}/{ave-window}/{var}_clim_poe_{ave-window}_{climo-mmdd}.bin'

output:

    file-dir-template: '{data-out}/forecasts/models/all_ranges/global/post-processed/{model}/{yyyy}/{mm}/{dd}/{cycle}'
    file-prefix-template: '{model}_{var}_{date}_{cycle}_{lead}'
    title-template: '{date} {model} {processing-type} {var} Forecast for {lead}'
    lat-range: (20, 70)
    lon-range: (200, 300)

...